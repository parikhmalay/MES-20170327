<CodeSnippet Format="1.1.0" xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <Header>
    <Title>List Vertical Align Middle</Title>
    <Author>NonProfitEasy</Author>
    <Shortcut>lsvam</Shortcut>
    <Description>Markup snippet for a List Vertical Align Middle</Description>
    <SnippetTypes>
      <SnippetType>Expansion</SnippetType>
      <SnippetType>SurroundsWith</SnippetType>
    </SnippetTypes>
  </Header>
  <Snippet>
    <Code Language="html">
      <![CDATA[
      <!-- Start List Style 2 structure here -->
      <div class="list-1 middleAlign">
	<div class="lst-header">
